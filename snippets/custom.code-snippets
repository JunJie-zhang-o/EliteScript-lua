        "scope": "lua",
        "prefix": "func_Hex2bin",
        "body": [
            "-- 16进制字符串转二进制字符串",
            "function Hex2bin(n)",
            "    local str = ''",
            "    fori = 1, string.len(n) - 1, 2do  ",
            "       local bytestr = string.sub(n, i, i+1)",
            "       local n = tonumber(bytestr, 16)",
            "       local t = {}",
            "       for i=7,0,-1 do",
            "           t[#t+1] = math.floor(n / 2^i)",
            "           str = str..t[#t]",
            "           n = n % 2^i",
            "       end",
            "   end",
            "   return str",
            "end"
        ],
        "description": "16进制转二进制"
