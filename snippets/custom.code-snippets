    "有符号32为整形16进制转10进制": {
        "scope": "lua",
        "prefix": "func_SignInt32_2_Dec",
        "body": [
            "-- 有符号32位整形16进制转10进制",
            "function SignInt32_2_Dec(int_buf,i)",
            "    local dec",
            "    local sign",
            "    local div",
            "    local dec_buf = tonumber(int_buf,16)",
            "    if dec_buf >= 32768 then",
            "        dec = 65536 - dec_buf",
            "        sign = -1",
            "    else",
            "        dec = dec_buf",
            "        sign = 1",
            "    end",
            "    if i <= 3 then",
            "        div = 100",
            "    else",
            "        div = 1000",
            "    end",
            "    return dec*sign/div",
            "end",
        ],
        "description": "有符号32位整形16进制转10进制"
    },
