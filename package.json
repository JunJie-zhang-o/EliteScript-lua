{
	"name": "elite-lua",
	"displayName": "EliteScript_Lua",
	"description": "Elite Robot Lua Script",
	"author": "jay.zhangjunjie",
	"publisher": "jay.zhangjunjie",
	"icon": "images/Elitelua.png",
	"version": "1.0.0",
	"engines": {
		"vscode": "^1.74.0"
	},
	"categories": [
		"Programming Languages",
		"Extension Packs"
	],
	"main": "./out/main.js",
	"l10n": "./l10n",
	"activationEvents": [
		"onLanguage:lua",
		"*"
	],
	"contributes": {
		"languages": [
			{
				"id": "EliteScript_Lua",
				"aliases": [
					"EliteScript_Lua"
				],
				"extensions": [
					".lua"
				],
				"configuration": "./language-configuration.json"
			}
		],
		"grammars": [
			{
				"language": "EliteScript_Lua",
				"path": "./syntaxes/lua.tmLanguage.json",
				"scopeName": "source.lua"
			}
		],
		"snippets": [
			{
				"language": "EliteScript_Lua",
				"path": "./snippets/EliteLua.code-snippets"
			},
			{
				"language": "lua",
				"path": "./snippets/Elite.code-snippets"
			}
		],
		"configuration": {
			"title": "EliteScript_Lua",
			"properties": {
				"EliteScript_Lua.builtInLibraryLanguageMode": {
					"type": "string",
					"default": "auto",
					"enum": [
						"auto",
						"zh-cn",
						"en",
						"ja",
						"not use"
					],
					"markdownDescription": "%config.builtInLibraryLanguageMode%",
					"scope": "resource"
				}
			}
		}
	},
	"extensionDependencies": [
		"sumneko.lua"
	],
	"repository": {
		"type": "git",
		"url": "https://github.com/JunJie-zhang-o/EliteScript-lua.git"
	},
	"__metadata": {
		"id": "8503629a-6801-4769-a908-d8bf53b23ed2",
		"publisherId": "0cf1cda8-e2d6-4330-b4cf-26c112ffb1c7",
		"publisherDisplayName": "Elite"
	},
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -p ./",
		"watch": "tsc -watch -p ./",
		"pretest": "npm run compile && npm run lint",
		"lint": "eslint src --ext ts",
		"test": "node ./out/test/runTest.js"
	},
	"devDependencies": {
		"@types/node": "16.x",
		"@types/vscode": "^1.74.0",
		"@typescript-eslint/eslint-plugin": "^6.4.1",
		"@typescript-eslint/parser": "^6.4.1",
		"@vscode/test-electron": "^2.3.4",
		"eslint": "^8.47.0",
		"glob": "^10.3.3",
		"typescript": "^5.1.6"
	},
	"dependencies": {
		"vsce": "^2.15.0"
	}
}
